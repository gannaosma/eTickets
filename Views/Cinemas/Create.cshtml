@model Cinema

@{
	ViewData["Tittle"] = "Create";
}

<div class="row text">
	<div class="col-md-8 offset-2">
		<p>
			<h1>Add new Cinema</h1>
		</p>
		<div class="row">
			<div class="col-md-10 offset-1">
				<form asp-action="Create">
					<div class="mb-3">
						<label asp-for="Logo" cite="control-label"></label>
						<input asp-for="Logo" class="form-control" />
						<span asp-validation-for="Logo" class="text-danger"></span>
					</div>
					<div class=" text-center">
						<img class="border-info rounded-circle" style="max-width:150px;" id="CinemaPreview" />
					</div>
					<div class="mb-3">
						<label asp-for="Name" cite="control-label"></label>
						<input asp-for="Name" class="form-control" />
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<label asp-for="Description" cite="control-label"></label>
						<input asp-for="Description" class="form-control" />
						<span asp-validation-for="Description" class="text-danger"></span>
					</div>
					<div class="d-flex justify-content-between mt-3">
						<a asp-action="Index" class="btn btn-outline-secondary">Show All</a>
						<input type="submit" value="Create" class="btn btn-outline-success" />
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

@section Scripts
	{
	<script>
		$(document).ready(function () {
			var output = document.getElementById('CinemaPreview');
			output.src = $("#Logo").val();
		})
		$("#Logo").on("change", function () {
			var output = document.getElementById('CinemaPreview');
			output.src = $(this).val();
		})

	</script>
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>

	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}